@{
    ViewData["Title"] = "List";
}
@model List<CategoryListModel>
<h1>List</h1>
@if(Model != null){


    

    <div class="row">
        
      
        <div class="col-md-8 mx-auto">

            <div class="text-end">
                <a  class="btn btn-success" asp-action="Create">Category Create</a>

            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>definition</th>
                        <th>delete</th>
                    </tr>

                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Definition</td>
                            <td>
                                <a class="btn btn-primary" asp-action="Delete" asp-controller="Categories" asp-route-id="@item.Id">Delete</a>
                                <a class="btn btn-primary" asp-action="Update" asp-controller="Categories" asp-route-id="@item.Id">Update</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>

}