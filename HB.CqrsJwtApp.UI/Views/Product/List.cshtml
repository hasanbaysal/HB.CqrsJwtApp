
@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

@model List<ProductListModel>

@if (Model != null)
{




    <div class="row">

        <div class="text-end">
            <a asp-action="Create">Product Create</a>

        </div>
        <div class="col-md-8 mx-auto">

            <table class="table">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>category id</th>
                        <th>price</th>
                        <th>stock</th>
                        <th>name</th>
                        <th>delete update</th>
                    </tr>

                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.CategoryId</td>
                            <td>@item.Price</td>
                            <td>@item.Stock</td>
                            <td>@item.Name</td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                <a asp-action="Update" asp-route-id="@item.Id">Update</a>
                                
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>

}
